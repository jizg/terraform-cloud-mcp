# Example environment configuration for Cloud Run deployment

# Transport mode: "stdio" for local use, "sse" for HTTP/Cloud Run
MCP_TRANSPORT=sse

# Port for HTTP server (Cloud Run sets this automatically)
PORT=8000

# Host binding for HTTP server
HOST=0.0.0.0

# Terraform Cloud Configuration
TFC_ADDRESS=https://app.terraform.io
TFC_TOKEN=your-terraform-cloud-token-here

# Safety Controls
ENABLE_DELETE_TOOLS=false
READ_ONLY_TOOLS=false

# Response Filtering
ENABLE_RAW_RESPONSE=false
